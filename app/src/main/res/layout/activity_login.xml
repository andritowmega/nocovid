<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundwhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="10dp"
        android:src="@drawable/logonoco"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/titulo"
        android:textColor="@color/colorSmartbusblue"
        android:text="Inicie Sesión"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dni"
        android:hint="dni"
        android:padding="5dp"
        android:textColor="@color/colorBackgroundwhite"
        android:textColorHint="@color/colorBackgroundwhite"
        android:background="@drawable/btn_circle_white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/password"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:hint="contraseña"
        android:textColor="@color/colorBackgroundwhite"
        android:textColorHint="@color/colorBackgroundwhite"
        android:background="@drawable/btn_circle_white"
        android:layout_width="200dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/entrar"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBackgroundwhite"
        android:text="Entrar"
        android:background="@drawable/btn_circle_blue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/registrar"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBackgroundwhite"
        android:text="Registrarme"
        android:background="@drawable/btn_circle_blue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</LinearLayout>